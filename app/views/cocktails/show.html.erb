<h1>Cocktail Details</h1>
<br>
<br>
<br>
<div>
  <h2><%= @cocktail.name %></h2>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
</div>
<div>
<h2>Doses</h2>
<%= link_to "create a new dose", new_cocktail_dose_path(@cocktail) %>
  <% @cocktail.doses.each do |dose| %>
  </h2>
  <li class="list-group-item">
    <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete
                  # data: { confirm: "Are you sure?" }
                   %>
  </li>
<% end %>
</div>
<br>
<br>
