<h1>cocktails show</h1>
<h2><%= @cocktail.name %></h2>
<% @cocktail.doses.each do |dose| %>
  </h2>
  <li class="list-group-item">
    <%= dose.description %> of <%= dose.ingredient.name %>
    <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete
                  # data: { confirm: "Are you sure?" }
                   %>
  </li>
<% end %>
<%= link_to "cocktail list", cocktails_path %>
<%= link_to "create a new dose", new_cocktail_dose_path(@cocktail) %>
